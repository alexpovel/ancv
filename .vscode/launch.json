    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run API Server",
            "type": "python",
            "request": "launch",
            "module": "ancv",
            "autoReload": {
                "enabled": true
            },
            "args": [
                "serve",
                "api",
                "--port",
                "8080"
            ],
            "justMyCode": false,
        },
        {
            "name": "Python: Run Single-File Server",
            "type": "python",
            "request": "launch",
            "module": "ancv",
            "autoReload": {
                "enabled": true
            },
            "args": [
                "serve",
                "file",
                "tests/test_data/resumes/full.json",
                "--port",
                "8080"
            ],
            "justMyCode": false,
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
        }
    ]
}
